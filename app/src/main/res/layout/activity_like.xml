<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_like"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.keyliveapp.keylivetv.mine.like.LikeActivity">
    <RelativeLayout
        android:id="@+id/like_head"
        android:layout_width="match_parent"
                    android:layout_height="50dp">

        <ImageButton
            android:id="@+id/like_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/ic_header_backarrow_black"/>

        <TextView
            android:text="我的收藏"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_centerInParent="true"/>
        <Button
            android:textSize="13sp"
            android:textColor="@color/colorPrimary"
            android:id="@+id/like_delete_all"
            android:background="@color/colorAlpha"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清空"/>


    </RelativeLayout>

    <ListView
        android:layout_below="@+id/like_head"
        android:id="@+id/like_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>

</RelativeLayout>
