<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/all_tag"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:src="@mipmap/ic_column_h"/>

        <TextView
            android:id="@+id/home_all_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/all_tag"
            android:text="xxxx"/>

        <Button
            android:id="@+id/home_btn_channel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@color/colorAlpha"
            android:drawableRight="@mipmap/ic_arrow_go"
            android:textColor="@color/colorGray"
            android:textSize="15dp"
            />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            style="@style/homeLiveLinerStyle">


            <ImageView
                android:id="@+id/home_all_pic1"
                style="@style/homeLivePicStyle"/>

            <TextView
                android:id="@+id/home_all_text1"
                style="@style/homeLiveTextStyle"/>

        </LinearLayout>

        <LinearLayout
            style="@style/homeLiveLinerStyle">


            <ImageView
                android:id="@+id/home_all_pic2"
                style="@style/homeLivePicStyle"/>

            <TextView
                android:id="@+id/home_all_text2"
                style="@style/homeLiveTextStyle"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            style="@style/homeLiveLinerStyle">


            <ImageView
                android:id="@+id/home_all_pic3"
                style="@style/homeLivePicStyle"/>

            <TextView
                android:id="@+id/home_all_text3"
                style="@style/homeLiveTextStyle"/>

        </LinearLayout>

        <LinearLayout
            style="@style/homeLiveLinerStyle">


            <ImageView
                android:id="@+id/home_all_pic4"
                style="@style/homeLivePicStyle"/>

            <TextView
                android:id="@+id/home_all_text4"
                style="@style/homeLiveTextStyle"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            style="@style/homeLiveLinerStyle">


            <ImageView
                android:id="@+id/home_all_pic5"
                style="@style/homeLivePicStyle"/>

            <TextView
                android:id="@+id/home_all_text5"
                style="@style/homeLiveTextStyle"/>

        </LinearLayout>

        <LinearLayout
            style="@style/homeLiveLinerStyle">

            <ImageView
                android:id="@+id/home_all_pic6"
                style="@style/homeLivePicStyle"/>

            <TextView
                android:id="@+id/home_all_text6"
                style="@style/homeLiveTextStyle"/>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>