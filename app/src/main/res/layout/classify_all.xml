<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="#23FF0000"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="2dp">

        <ImageView
            android:id="@+id/img_classify_left"
            android:layout_width="match_parent"
            android:layout_height="115dp" />

        <LinearLayout
            android:padding="3dp"
            android:gravity="center"
            android:layout_alignBottom="@+id/img_classify_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textColor="#FFFFFF"
                android:id="@+id/tv_name_left"
                android:layout_width="0dp"
                android:lines="1"
                android:ellipsize="end"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:textColor="#FFFFFF"
                android:id="@+id/tv_viewers_left"
                android:gravity="center"
                android:drawableLeft="@mipmap/ic_top_personal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_title_left"
            android:layout_below="@+id/img_classify_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"/>

    </RelativeLayout>

    <RelativeLayout
        android:background="#23FF0000"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="2dp">

        <ImageView
            android:id="@+id/img_classify_right"
            android:layout_width="match_parent"
            android:layout_height="115dp" />

        <LinearLayout
            android:padding="3dp"
            android:gravity="center"
            android:layout_alignBottom="@+id/img_classify_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textColor="#FFFFFF"
                android:id="@+id/tv_name_right"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:lines="1"
                android:ellipsize="end"/>

            <TextView
                android:gravity="center"
                android:id="@+id/tv_viewers_right"
                android:textColor="#FFFFFF"
                android:drawableLeft="@mipmap/ic_top_personal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_title_right"
            android:layout_below="@+id/img_classify_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"/>


    </RelativeLayout>

</LinearLayout>